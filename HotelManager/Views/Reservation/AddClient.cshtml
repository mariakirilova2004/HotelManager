@using HotelManager.Core.Models.Reservation
@model AddClientReservationFormModel

@{
    ViewData["Title"] = "Add Client To Reservation";
}

<!-- Room Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow @*zoomIn*@" data-wow-delay="0.1s" src="~/img/about-1.jpg" style="margin-top: 0%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow @*zoomIn*@" data-wow-delay="0.3s" src="~/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow @*zoomIn*@" data-wow-delay="0.5s" src="~/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow @*zoomIn*@" data-wow-delay="0.7s" src="~/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow @*fadeInUp*@" data-wow-delay="0.2s">
                    <h6 class="section-title text-center text-primary text-uppercase">@ViewData["Title"]</h6>
                    <h1 class="mb-5">Start <span class="text-primary text-uppercase"> Exploring</span></h1>
                    <form method="post">
                        <div class="row g-3">
                            <div class="col col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ClientId" class="form-control" id="Clients">
                                        @foreach (var client in Model.Clients)
                                        {
                                            <option value="@client.Id" placeholder="">@client.FirstName @client.LastName - @client.PhoneNumber</option>
                                        }
                                    </select>
                                    <label for="Clients">Clients</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Room End -->
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}