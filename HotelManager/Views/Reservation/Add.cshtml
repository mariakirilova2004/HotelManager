@using HotelManager.Core.Models.Reservation
@model AddReservationFormModel

@{
    ViewData["Title"] = "Add New Reservation";
}

<!-- Room Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow @*zoomIn*@" data-wow-delay="0.1s" src="~/img/about-1.jpg" style="margin-top: 0%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow @*zoomIn*@" data-wow-delay="0.3s" src="~/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow @*zoomIn*@" data-wow-delay="0.5s" src="~/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow @*zoomIn*@" data-wow-delay="0.7s" src="~/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow @*fadeInUp*@" data-wow-delay="0.2s">
                    <h6 class="section-title text-center text-primary text-uppercase">@ViewData["Title"]</h6>
                    <h1 class="mb-5">Start <span class="text-primary text-uppercase"> Exploring</span></h1>
                    <form method="post">
                        <div class="row g-3">
                            <div class="col col-md-6">
                                <div class="form-floating">
                                    <select asp-for="RoomNumberId" class="form-control" id="RoomNumberId">
                                        @foreach (var room in Model.Rooms)
                                        {
                                            <option value="@room.Id" placeholder="">@room.Number - @room.RoomType</option>
                                        }
                                    </select>
                                    <label for="RoomNumberId">Room</label>
                                </div>
                            </div>
                            <div class="col col-md-6">
                                <div class="form-floating">
                                    <select asp-for="UserId" class="form-control" id="UserId">
                                        @foreach (var client in Model.Clients)
                                        {
                                            <option value="@client.Id" placeholder="">@client.FirstName @client.LastName - @client.PhoneNumber.Skip(7)</option>
                                        }
                                    </select>
                                    <label for="UserId">Main Client</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="date" value="01/01/2023" class="form-control" id="arrival" autocomplete="arrival" aria-required="true" placeholder="Arrival Date" asp-for="@Model.Arrival">
                                    <label for="arrival">Arrival Date</label>
                                    <span asp-validation-for="@Model.Arrival" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="date" value="01/01/2023" class="form-control" id="arrival" autocomplete="arrival" aria-required="true" placeholder="Arrival Date" asp-for="@Model.Arrival">
                                    <label for="hiringdate">Arrival Date</label>
                                    <span asp-validation-for="@Model.Arrival" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="checkbox" name="IsAdult" asp-for="@Model.IsAdult" style="height: 40px; width: 40px" />
                                    <label style="margin-left: 40px" for="IsAdult" asp-for="@Model.IsAdult">Is Adult</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="checkbox" name="IsAdult" asp-for="@Model.IsAdult" style="height: 40px; width: 40px" />
                                    <label style="margin-left: 40px" for="IsAdult" asp-for="@Model.IsAdult">Is Adult</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Room End -->
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}