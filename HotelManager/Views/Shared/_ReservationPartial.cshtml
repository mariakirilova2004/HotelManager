@using HotelManager.Core.Extensions
@using HotelManager.Core.Models.Reservation;
@model ReservationViewModel;

<div class="col-lg-4 col-md-6 wow fadeInUp" @*data-wow-delay="0.6s"*@>
    <div class="room-item shadow rounded overflow-hidden">
        <div class="p-4 mt-2">
            <div class="d-flex justify-content-between mb-3">
                <h5 class="mb-0">@Model.RoomNumber - $ @Model.Total</h5>
            </div>
            <div class="d-flex mb-3">
                <small class="border-end me-3 pe-3"><i class="fa-solid fa-plane-arrival text-primary me-2"></i>@Model.Arrival</small>
                <small class="border-end me-3 pe-3"><i class="fa-solid fa-plane-departure text-primary me-2"></i>@Model.Leaving</small>
            </div>
            <p class="text-body mb-3">Breakfast Included: 
            @{
                if (Model.IsBreakfastIncluded)
                {
                    <p>Yes</p>
                }
                else
                {
                    <p>No</p>
                }
            }</p>
            <p class="text-body mb-3">All Inclusive: 
            @{
                if (Model.IsAllInclusive)
                {
                    <p>Yes</p>
                }
                else
                {
                    <p>No</p>
                }
            }</p>
        </div>
    </div>
</div>