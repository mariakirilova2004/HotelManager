@using HotelManager.Core.Extensions
@using HotelManager.Core.Models.Client
@using HotelManager.Extensions
@model ClientViewModel;

<div class="col-lg-4 col-md-6 wow fadeInUp" @*data-wow-delay="0.6s"*@>
    <div class="room-item shadow rounded overflow-hidden">
        <div class="p-4 mt-2">
            <div class="d-flex justify-content-between mb-3">
                <h5 class="mb-0">@Model.FirstName @Model.LastName</h5>
                @if (Model.IsAdult)
                {
                    <div class="ps-2">
                    <small class="fa fa-star text-primary"></small>
                    </div>
                }
            </div>
            <div class="d-flex mb-3">
                <small class="border-end me-3 pe-3"><i class="fa fa-envelope text-primary me-2"></i>@Model.Email</small>
                <small class="border-end me-3 pe-3"><i class="fa fa-phone text-primary me-2"></i>@Model.PhoneNumber</small>
            </div>
            <div class="d-flex justify-content-between">
                <form asp-area="" asp-controller="Client" asp-action="Edit" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()" method="get">
                    <button type="submit" class="btn btn-sm btn-dark rounded py-2 px-4" href="">Edit</button>
                </form>
                <form asp-area="" asp-controller="Client" asp-action="Details" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()" method="get">
                    <button type="submit" class="btn btn-sm btn-primary rounded py-2 px-4" href="">Details</button>
                </form>
                <form asp-area="" asp-controller="Client" asp-action="Delete" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()" method="post">
                   <button type="submit" class="btn btn-sm btn-dark rounded py-2 px-4">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>