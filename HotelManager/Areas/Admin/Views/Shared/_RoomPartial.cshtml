@using HotelManager.Core.Extensions
@using HotelManager.Core.Models.Room
@model RoomViewModel;

<div class="col-lg-4 col-md-6 wow fadeInUp" @*data-wow-delay="0.6s"*@>
    <div class="room-item shadow rounded overflow-hidden">
        <div class="p-4 mt-2">
            <div class="d-flex justify-content-between mb-3">
                <h5 class="mb-0">@Model.Number @Model.RoomType</h5>
                @if (Model.IsFree)
                {
                    <div class="ps-2">
                    <small class="fa fa-star text-primary"></small>
                    <small class="fa fa-star text-primary"></small>
                    <small class="fa fa-star text-primary"></small>
                    <small class="fa fa-star text-primary"></small>
                    <small class="fa fa-star text-primary"></small>
                    </div>
                }
            </div>
            <div class="d-flex mb-3">
                <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@Model.Capacity</small>
            </div>
            <p class="text-body mb-3">Price For Adult: @Model.PriceForAdultBed</p>
            <p class="text-body mb-3">Price For Child: @Model.PriceForChildBed</p>
            <div class="d-flex justify-content-between">
                @if (User.IsAdmin())
                {
                    <form asp-area="Admin" asp-controller="Room" asp-action="Edit" asp-route-id="@Model.Number" asp-route-information="@Model.GetInformation()" method="get">
                        <button type="submit" class="btn btn-sm btn-primary rounded py-2 px-4" href="">Edit</button>
                    </form>
                    <form asp-area="Admin" asp-controller="Room" asp-action="Delete" asp-route-id="@Model.Number" asp-route-information="@Model.GetInformation()" method="post">
                       <button type="submit" class="btn btn-sm btn-dark rounded py-2 px-4">Delete</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>